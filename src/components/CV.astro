<section class="cv" id="cvSection">
	<div class="content">
		<img src="/img/cv.png" alt="CV de Mark" />
		<div class="download">
			<h2>Mark Sánchez García CV</h2>
			<button id="downloadBtn">Descargar</button>
		</div>
	</div>
</section>

<style>
	.cv {
		display: grid;
		place-items: center;
		position: fixed;
		top: 0;
		left: 0;
		z-index: 10000;
		height: 100dvh;
		width: 100%;
		background-color: rgba(0, 0, 0, 0.438);
		backdrop-filter: blur(10px);
		-webkit-backdrop-filter: blur(10px);

		opacity: 0;
		visibility: hidden;
		transition:
			opacity 0.4s ease,
			visibility 0.4s ease;
	}

	.cv.active {
		opacity: 1;
		visibility: visible;
	}

	.content {
		border-radius: 1.5rem;
		padding: 3.5rem 3rem;
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 2rem;
		width: 40%;
		background-color: rgba(0, 0, 0, 0.85);
		transform: translateY(-20px);
		transition: transform 0.4s ease;
	}

	.cv.active .content {
		transform: translateY(0);
	}

	.content h2 {
		color: white;
	}

	.content img {
		border-radius: 1.5rem;
		height: 30rem;
		width: auto;
	}

	.download {
		display: flex;
		flex-direction: column;
		align-items: flex-end;
	}

	.download button {
		cursor: pointer;
		padding: 0.8rem 1.6rem;
		font-size: 1rem;
		font-weight: 600;
		border-radius: 9999px;
		border: none;
		transition: all 0.3s ease;
		background: #993a93;
		color: white;
		box-shadow: 0 4px 12px rgba(178, 75, 171, 0.4);
	}

	.download button:hover {
		background: #c752bf;
		transform: translateY(-2px);
	}
</style>

<script>
	const cvSection = document.getElementById("cvSection");
	const downloadBtn = document.getElementById("downloadBtn");

	// Escucha el evento desde header.astro
	document.addEventListener("openCV", () => {
		cvSection.classList.add("active");
		document.body.style.overflow = "hidden";
	});

	downloadBtn?.addEventListener("click", () => {
		const link = document.createElement("a");
		link.href = "/img/cv.png";
		link.download = "Mark_Sanchez_CV.webp";
		link.click();
	});

	cvSection.addEventListener("click", (e) => {
		if (e.target === cvSection) {
			cvSection.classList.remove("active");
			document.body.style.overflow = "";
		}
	});
</script>
